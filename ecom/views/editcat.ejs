<%- include("./partials/header") %>
    <link rel="stylesheet" href="/css/add.css" type="text/css">
    <div class="container">
        <div class="add">
            <div>
                Edit categorie
            </div>
            <form action="/categorie/<%=cat._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="name" class="form-control" id="name" name="cat[name]" value="<%=cat.name%>" placeholder="Name">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="cat[status]" id="active" value="active">
                    <label class="form-check-label" for="active">Active</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="cat[status]" id="block" value="block">
                    <label class="form-check-label " for="block"> Block</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-warning ">Submit</button>
                </div>
            </form>
        </div>
        <form id="delete" action="/categorie/<%= cat._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger btn-sm">DELETE</button>
        </form>
    </div>

    <%- include("./partials/footer") %>