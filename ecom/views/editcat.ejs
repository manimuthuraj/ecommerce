<%- include("./partials/header") %>
    <style>
        .loader {
            border: 16px solid #f3f3f3;
            /* Light grey */
            border-top: 16px solid #3498db;
            /* Blue */
            border-radius: 50%;
            width: 120px;
            height: 120px;
            animation: spin 2s linear infinite;
        }
        
        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
    </style>
    <link rel="stylesheet" href="/css/add.css" type="text/css">
    <div class="container">
        <div class="add">
            <div>
                Edit categorie
            </div>
            <form action="/categorie/<%=cat._id%>?_method=PUT" method="POST" id="myform">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="name" class="form-control" id="name" name="cat[name]" value="<%=cat.name%>" placeholder="Name">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="cat[status]" id="active" value="active" checked>
                    <label class="form-check-label" for="active">Active</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="cat[status]" id="block" value="block">
                    <label class="form-check-label " for="block"> Block</label>
                </div>
                <div>
                    <button type="submit" id="submit" class="btn btn-warning ">Submit</button>
                </div>
                <p id="required"></p>
                <span id="loader1"></span>
            </form>
        </div>
        <form id="delete" action="/categorie/<%= cat._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger btn-sm">DELETE</button>
        </form>
    </div>
    <script>
        var name = $("#myform input[name=name]").val()
        var status = document.getElementsByName("cat[status]");
        $('#submit').on('click', function() {
            if ($("#myform #name").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
        });
        /*$(window).load(function() {
            $(".loader").fadeOut("slow");
        });*/
    </script>


