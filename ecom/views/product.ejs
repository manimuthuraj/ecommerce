<%- include("./partials/header") %>
    <link rel="stylesheet" href="/css/add.css" type="text/css">
    <div class="container">
        <div class="add">
            <div>
                Add new products
            </div>
            <form action="/products" method="POST" id="myform" enctype="multipart/form-data">
                <div class=" form-group ">
                    <label for="Name ">Name</label>
                    <input type="text" class="form-control " id="name " name="name" placeholder="Name ">
                </div>
                <div class="form-group ">
                    <label for="categorie ">Select categorie</label>

                    <select class="form-control " id="categorie " name="categorie">
                    <%cate.forEach(function(cate){%>
                        <option value="<%=cate._id%>">
                <%=cate.name%>
                    </option>
                    <%})%>
                        </select>
                </div>

                <div class="form-group">
                    <label for="Quantity">Quantity</label>
                    <input type="number" class="form-control" id="Quantity" name="quantity" placeholder="Quantity">
                </div>

                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="price">
                </div>

                <div class="form-group">
                    <input type="file" name="picture" id="input-files" class="form-control-file border" />
                </div>

                <div>
                    <button type="submit" id="submit" class="btn btn-warning ">Submit</button>
                </div>
                <p id="required"></p>
            </form>
        </div>
    </div>

    <script>
        $('#submit').on('click', function() {
            if ($("#myform #name").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
            if ($("#myform #Quantity").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
            if ($("#myform #price").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
        });
    </script>

    <%- include("./partials/footer") %>