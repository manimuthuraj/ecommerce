<%- include("./partials/header") %>
    <link rel="stylesheet" href="/css/add.css" type="text/css">
    <div class="container">
        <div class="add">
            <div>
                Add new products
            </div>
            <form action="/products" method="POST">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="name" class="form-control" id="name" name="product[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="categorie">Select categorie</label>
                    <select class="form-control" id="categorie" name="product[categorie]">
                    <%cate.forEach(function(cate){%>
                        <option value="<%=cate._id%>"><%=cate.name%></option>
                    <%})%>
                 </select>
                </div>

                <div class="form-group">
                    <label for="Quantity">Quantity</label>
                    <input type="number" class="form-control" id="Quantity" name="product[quantity]" placeholder="Quantity">
                </div>

                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="product[price]" placeholder="price">
                </div>

                <div>
                    <button type="submit" class="btn btn-warning ">Submit</button>
                </div>
            </form>
        </div>
    </div>

