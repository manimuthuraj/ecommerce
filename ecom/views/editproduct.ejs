<%- include("./partials/header") %>
    <link rel="stylesheet" href="/css/add.css" type="text/css">
    <div class="container">
        <div class="add">
            <div>
                Edit products
            </div>
            <form action="/products/<%=product._id%>?_method=PUT" method="POST" id="myform">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="name" class="form-control" id="name" value="<%=product.name%>" name="product[name]">
                </div>
                <div class=" form-group ">
                    <label for="categorie ">Select categorie</label>
                    <select class="form-control " id="categorie " value="<%=product.categorie%>" name="product[categorie]">
                    <%cate.forEach(function(cate){%>
                        <option value="<%=cate._id%>">
                            <%=cate.name%>
                        </option>
                        <%})%>
                            </select>
                </div>

                <div class="form-group">
                    <label for="udate">Updated Date</label>
                    <input type="text" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" class="form-control" id="udate" placeholder="yyyy-mm-dd" name="product[udate]">
                </div>


                <div class="form-group">
                    <label for="Quantity">Quantity</label>
                    <input type="number" class="form-control" id="Quantity" value="<%=product.quantity%>" name="product[quantity]">
                </div>

                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" value="<%=product.price%>" name="product[price]">
                </div>

                <div>
                    <button type="submit" id="submit" class="btn btn-warning ">Submit</button>
                </div>
                <p id="required"></p>
            </form>
            <form id="delete" action="/products/<%= product._id %>?_method=DELETE" method="post">
                <button class="btn btn-danger btn-sm">DELETE</button>
            </form>
        </div>
    </div>
    <script>
        $('#submit').on('click', function() {
            if ($("#myform #name").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
            if ($("#myform #Quantity").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
            if ($("#myform #udate ").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
            if ($("#myform #price").val() == "") {
                $("#required").text("*All fields are required")
                return false
            }
        });
    </script>

    <%- include("./partials/footer") %>